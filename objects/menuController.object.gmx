var lengths = getMenuLineLengths();

var guiHorizontalCentre = display_get_gui_width() / 2;
var guiHeight           = display_get_gui_height();

for (var i = optionsLength; i &gt; 0; --i) {
    optionDimensions[i - 1, 1] = i * guiHeight / (optionsLength + 1);
